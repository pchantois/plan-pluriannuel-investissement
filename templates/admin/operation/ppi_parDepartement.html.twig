
<table id="ppi_global" class="table table-striped table-bordered dislay nowrap ppi stripe row-border order-column">
    <thead>
        <tr>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            {% for annee in items|first|keys %}
            <th>dep.{{ annee }}</th>
            <th>rec.{{ annee }}</th>
            <th>CN.{{ annee }}</th>
            {% endfor %}
            {% if mode == 'category' %}
                <th>regroupement</th>
                <th>code maire</th>
                <th>quartier</th>
                <th>Nature Op√©ration</th>
                <th>politique publique</th>
                <th>DOB</th>
                <th>recueil</th>
                <th>Coup Parti</th>
                <th>Date de livraison</th>
            {% endif %}
        </tr>
    </thead>
    <tbody>
    {% for libelle, item in items %}
        <tr>
            <td>{{ libelle|split('####').2 }}</td>
            <td>{{libelle|split('####').3}}</td>
            <td>{{libelle|split('####').4}}</td>
            <td><a href="{{ path('operation_show', {'id': libelle|split('####').1, 'version': version}) }}">{{ libelle|split('####').0 }}</a></td>
            {% for operation in item %}
            <td>{{operation.depense|number_format(0, '', '')|raw}}</td>
            <td>{{operation.recette|number_format(0, '', '')|raw}}</td>
            <td>{{(operation.depense - operation.recette)|number_format(0, '', '')|raw}}</td>
            {% endfor %}
            {% if mode == 'category' %}
                <td>{{libelle|split('####').5}}</td>
                <td>{{libelle|split('####').6}}</td>
                <td>{{libelle|split('####').7}}</td>
                <td>{{libelle|split('####').8}}</td>
                <td>{{libelle|split('####').9}}</td>
                <td>{{libelle|split('####').10}}</td>
                <td>{{libelle|split('####').11}}</td>
                <td>{{libelle|split('####').12}}</td>
                <td>{{libelle|split('####').13}}</td>
            {% endif %}
        </tr>
    {% else %}
        <tr>
            <td colspan="9">no records found</td>
        </tr>
    {% endfor %}
    </tbody>
    <tfoot>
        <tr>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            {% for annee in items|first|keys %}
            <th>depense</th>
            <th>recette</th>
            <th>charge nette</th>
            {% endfor %}
            {% if mode == 'category' %}
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            {% endif %}
        </tr>
    </tfoot>
</table>
